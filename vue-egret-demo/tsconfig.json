{
	"compilerOptions": {
		"allowJs": false,
		"sourceMap": false,
		"target": "es5",
		"jsx": "react",
		"moduleResolution": "node",
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"declaration": false,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"removeComments": true,
		"strictNullChecks": false,
		"baseUrl": ".",
	},
	"include": [
		"./src/*",
		"./types/*"
	],
	"exclude": [
		"dist",
		"build",
		"config",
		"scripts",
		"public",
		"node_modules",
		"lib"
	]
}
